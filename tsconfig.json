{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react",
    "allowJs": true,
    "module": "esnext", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["/components/*"],
      "@pages/*": ["/pages/*"],
      "@styles/*": ["/styles/*"],
      "@images/*": ["/images/*"]
    }
  },
  "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts", "./plugins/**/*"]
}
